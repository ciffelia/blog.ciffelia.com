{
  extends: [
    'config:base',
    ':semanticCommitsDisabled',
    ':prHourlyLimitNone',
    ':prConcurrentLimitNone',
  ],
  packageRules: [
    {
      matchManagers: ['npm'],
      rangeStrategy: 'bump',
    },
    {
      matchPackageNames: ['@types/node'],
      major: { enabled: false },
    },
    {
      matchSourceUrls: ['https://github.com/matteobruni/tsparticles'],
      groupName: 'tsparticles monorepo',
    },
  ],
}
