{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
    ':semanticCommitsDisabled',
    ':prHourlyLimitNone',
    ':prConcurrentLimitNone',
  ],
  timezone: 'Asia/Tokyo',
  schedule: ['before 9am on Saturday'],
  packageRules: [
    {
      matchManagers: ['npm'],
      rangeStrategy: 'bump',
      dependencyDashboardApproval: true,
    },
    {
      matchPackageNames: ['@types/node'],
      major: { enabled: false },
    },
    {
      matchSourceUrls: ['https://github.com/matteobruni/tsparticles'],
      groupName: 'tsparticles monorepo',
    },
  ],
}
