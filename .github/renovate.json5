{
  extends: [
    'config:base',
    ':semanticCommitsDisabled',
    ':prHourlyLimitNone',
    ':prConcurrentLimitNone',
  ],
  timezone: 'Asia/Tokyo',
  schedule: ['every weekend'],
  packageRules: [
    {
      matchManagers: ['npm'],
      rangeStrategy: 'bump',
    },
    {
      matchManagers: ['npm'],
      matchPackageNames: ['prettier', 'yarn'],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
    {
      matchPackagePrefixes: ['@types/'],
      matchUpdateTypes: ['patch'],
      matchCurrentVersion: '!/^0/',
      automerge: true,
    },
    {
      matchPackageNames: ['@types/node'],
      major: { enabled: false },
    },
    {
      matchSourceUrls: ['https://github.com/matteobruni/tsparticles'],
      groupName: 'tsparticles monorepo',
    },
  ],
}
