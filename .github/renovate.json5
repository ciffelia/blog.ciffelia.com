{
  extends: [
    'config:base',
    ':semanticCommitsDisabled',
    ':prHourlyLimitNone',
    ':prConcurrentLimitNone',
  ],
  timezone: 'Asia/Tokyo',
  schedule: ['every weekend'],
  packageRules: [
    {
      matchManagers: ['npm'],
      rangeStrategy: 'bump',
    },
    {
      matchManagers: ['npm'],
      matchPackagePatterns: [
        '^yarn$',
        '^@types/',
        '^@typescript-eslint/',
        '^eslint',
        '^prettier$',
        '^schema-dts$',
      ],
      matchUpdateTypes: ['minor', 'patch'],
      matchCurrentVersion: '!/^0/',
      automerge: true,
    },
    {
      matchPackageNames: ['@types/node'],
      major: { enabled: false },
    },
    {
      matchSourceUrls: ['https://github.com/matteobruni/tsparticles'],
      groupName: 'tsparticles monorepo',
    },
  ],
}
