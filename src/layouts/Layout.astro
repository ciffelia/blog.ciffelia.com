    <title>{title !== undefined ? `${title} | ${SITE_NAME}` : SITE_NAME}</title>
  </head>
  <body>
    <!-- <Background /> -->
    <div class="min-h-screen flex flex-col font-serif">
      <!-- <Header /> -->
      <slot />
      <div class="mt-auto">
        <!-- <Footer /> -->
      </div>
    </div>
  </body>
</html>
