---
import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
}

const { src, alt, width } = Astro.props;

const data = await getImage({ src, width, densities: [1, 2, 3] });
---

<a href={src.src} target="_blank">
  <img src={src.src} alt={alt} srcset={data.srcSet.attribute} {...data.attributes}  />
</a>
