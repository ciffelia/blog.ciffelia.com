---
interface Props {
  emoji: string;
  class: string;
}

const { emoji, ...props } = Astro.props;

const codePoints = [...emoji]
  // biome-ignore lint/style/noNonNullAssertion: cp.codePointAt(0) is always defined
  .map((cp) => cp.codePointAt(0)!.toString(16))
  .join("-");
---

<img
  src={`https://fluent-emoji.ciffelia.com/${codePoints}_color.svg`}
  alt={emoji}
  {...props}
/>
