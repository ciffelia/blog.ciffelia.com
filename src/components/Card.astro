---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
  rounded?: boolean;
  hoverTransition?: boolean;
}>;

const { as: Tag, rounded, hoverTransition, ...props } = Astro.props;
---

<Tag
  class:list={[
    "bg-slate-50 shadow-lg shadow-white/10 dark:bg-slate-900 dark:shadow-black/10",
    {
      "rounded-2xl": rounded,
      "transition-all duration-200 hover:shadow-white/25 dark:hover:shadow-black/25":
        hoverTransition,
    },
  ]}
  {...props}
>
  <slot />
</Tag>
